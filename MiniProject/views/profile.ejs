<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Project</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-3">
    
    <div class="flex justify-end">
      <a href="/logout" class="bg-red-500 px-3 py-2 rounded-md hover:bg-red-600">Logout</a>
    </div>

    
    <h3 class="text-3xl m-2">Hello, <%= user.name %></h3>
    <h5 class="m-2 mt-5">You can create a post</h5>

  <form action="/post" method="POST" class="mt-5">
      <textarea
        name="content"
        placeholder="What's on your mind?"
        class="block w-full sm:w-1/2 p-3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md text-white"
        required
      ></textarea>
      <button
        type="submit"
        class="px-4 py-2 w-40 bg-blue-500 hover:bg-blue-600 text-white rounded-md block mt-3"
      >
        Post
      </button>
    </form>



    <div class="postcontainer mt-5">
      <% posts.reverse().forEach(function (post) { %>
        <div class="post w-1/3 p-4 mb-4 rounded-md border-[1px] border-zinc-800">
          <h4 class="text-blue-500 mb-2">@<%= post.user.username || user.name %></h4>
          <p class="text-sm tracking-tight"><%= post.content %></p>
          <div class="btns flex gap-4 mt-5">
            <a class="text-blue-500" href="">Like</a>
            <a class="text-zinc-600" href="">Edit</a>
          </div>
        </div>
      <% }) %>
    </div>
    
    
    
    
    </div>
  </div>
</body>

</html>
